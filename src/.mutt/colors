color   tree         color249      color235            # Threading arrows

color   index        color249      color235  " "       # Message default
color   index        brightwhite   color235  "~N|~O"   # New
color   index        color240       color235  ~D        # Deleted
color   index        color240       color235  "~G~D"    # Deleted encrypted
color   index        color240       color235  "~g~D"    # Deleted signed
#color   index        green         color235  ~G        # Encrypted
#color   index        cyan          color235  "~G~N"    # Encrypted new
#color   index        green         color235  ~g        # Signed
#color   index        cyan          color235  "~g~N"    # Signed new
color   index        red           color235  ~F        # Flagged
color   index        brightred     color235  "~F~N"    # Flagged new

color   body         color253      color235  "."
# Note: tilde is the pager area below a message.
