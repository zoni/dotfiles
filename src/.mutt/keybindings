macro index b '<enter-command>toggle sidebar_visible<enter>'
macro pager b '<enter-command>toggle sidebar_visible<enter>'
bind index B bounce-message

bind index \CK sidebar-prev
bind index \CJ sidebar-next
bind index \CO sidebar-open

bind pager \CK sidebar-prev
bind pager \CJ sidebar-next
bind pager \CO sidebar-open

bind pager h display-toggle-weed
bind pager k previous-line
bind pager j next-line

bind index j next-entry
bind index k previous-entry

macro index,pager y "<change-folder>?<toggle-mailboxes>" "display mailboxes"
bind browser y exit

bind index,pager u next-unread
bind index,pager U next-unread-mailbox

bind editor \t complete-query

macro index,pager A "<pipe-message>abook --add-email<return>" "add the sender address to abook"

macro index,pager d "s=Trash/\n" "move message to trash"
macro index,pager a "s=Archives/`date +%Y`\n" "move message to archive"
macro index,pager C "<copy-message>?<toggle-mailboxes>" "copy message"
macro index,pager M "<save-message>?<toggle-mailboxes>" "move message"
macro index,pager S "s=Spam/ToReport/\n" "move message to spam"
