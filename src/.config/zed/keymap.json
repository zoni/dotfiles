// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      "ctrl-`": "terminal_panel::ToggleFocus",
      "space s f": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      // Navigation and window management
      "-": "project_panel::ToggleFocus",
      "ctrl-n": "pane::ActivateNextItem",
      "ctrl-p": "pane::ActivatePreviousItem",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
      "space w j": "workspace::ActivatePaneDown",
      "space w k": "workspace::ActivatePaneUp",
      "space w shift-h": "workspace::SwapPaneLeft",
      "space w shift-l": "workspace::SwapPaneRight",
      "space w shift-j": "workspace::SwapPaneDown",
      "space w shift-k": "workspace::SwapPaneUp",
      "space w s": "pane::SplitDown",
      "space w v": "pane::SplitRight",
      "space w c": "pane::CloseActiveItem",
      "space w a": "pane::CloseAllItems",
      "space s f": "file_finder::Toggle",
      "space s /": "pane::DeploySearch",
      "space ?": "assistant::ToggleFocus",

      // Git
      "space r b": "git::Blame",
      "space r c": "git::Commit",
      "space r e": "editor::ExpandAllDiffHunks",
      "space r s": "git_panel::ToggleFocus",
      "space r d": "git::Diff",
      "space r h s": "git::ToggleStaged"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-`": "workspace::ToggleRightDock",
      "ctrl-shift-n": "workspace::NewTerminal"
    }
  },
  {
    "context": "FileFinder",
    "bindings": {
      "ctrl-j": "menu::SelectNext",
      "ctrl-k": "menu::SelectPrevious"
    }
  }
]
